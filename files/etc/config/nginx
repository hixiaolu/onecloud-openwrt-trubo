config main 'global'
	option uci_enable 'true'

config server '_lan'
	option server_name '_lan'
	list listen '80 default_server'
	list listen '[::]:80 default_server'
	option index 'index.html'
	option location '/'
	option uci_enable 'true'

config location '/_redirect2ssl'
	option server '_lan'
	option path '/'
	option return '302 https://$server_addr$request_uri'
	option access_log 'off'
	option uci_enable 'false'

config server '_ssl'
	option server_name '_ssl'
	list listen '443 ssl default_server'
	list listen '[::]:443 ssl default_server'
	option ssl_certificate '/etc/nginx/conf.d/_lan.crt'
	option ssl_certificate_key '/etc/nginx/conf.d/_lan.key'
	option ssl_session_cache 'shared:SSL:32k'
	option ssl_session_timeout '64m'
	option index 'index.html'
	option location '/'
	option uci_enable 'true'

config location '~_lan'
	option server '_ssl'
	option path '~^/(cgi-bin|luci-static|luci)/(.*)'
	option alias '/www/$1/$2'
	option index 'index.html'
	option try_files '$uri $uri/ @luci'
	option uci_enable 'true'

config location '@luci'
	option server '_ssl'
	option path '@luci'
	option include 'uwsgi_params'
	option uwsgi_param 'SERVER_ADDR $server_addr'
	option uwsgi_pass 'unix:///var/run/luci-webui.socket'
	option uci_enable 'true'